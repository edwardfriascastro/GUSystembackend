{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "lib": ["es2020", "esnext.asynciterable"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "types": ["node"],
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
